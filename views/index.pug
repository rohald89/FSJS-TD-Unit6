extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio
      p.lead.text-light Below you can find all projects I've created for the FSJS techdegree up to this point. You can click them to get more information.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`../project/${project.id}`)
            img.thumbnail(src=`${project.thumbnail}`)
            h5= project.project_name

      
